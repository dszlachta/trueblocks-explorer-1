{
  "name": "trueblocks-explorer",
  "main": "electron/main.js",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start-docker": "PORT=3002 REACT_APP_API_URL=http://localhost REACT_APP_API_PORT=`node ./detect_api_port.mjs` react-scripts start",
    "start": "PORT=3002 react-scripts start",
    "start-log-scraper": "chifra scrape run 1>$HOME/.quickBlocks/cache/tmp/scraper.log 2>&1 &",
    "start-scraper": "chifra scrape run 1>/dev/null 2>&1 &",
    "electron-forge-start": "ELECTRON_UI_URL=http://localhost:3002 electron-forge start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "prettify": "node_modules/.bin/prettier '{src,test,mocks}/**/*.js' --write",
    "lint": "eslint '{src,test,mocks}/**/*.js'",
    "test": "react-scripts test",
    "document": "documentation build src/components/**/[A-Zi]*.{js,jsx,ts,tsx} -f html -o docs/components ; open docs/components/index.html",
    "generate": "cd src ; makeClass -jarv ; cd -",
    "electron-dev": "ELECTRON_UI_URL=http://localhost:3002 electron electron/main.js",
    "electron-app-dev": "nf start",
    "package": "electron-forge package",
    "premake": "yarn build",
    "make": "electron-forge make",
    "make-mac": "yarn make --platform mas",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "@hookform/error-message": "^0.0.4",
    "axios": "^0.20.0",
    "d3": "^5.15.1",
    "d3-array": "^2.4.0",
    "d3-scale": "^3.2.1",
    "deepmerge": "^4.2.2",
    "documentation": "^13.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^6.0.0",
    "husky": "^4.2.3",
    "jquery": "^3.4.1",
    "lodash": "^4.17.19",
    "lodash.orderby": "^4.6.0",
    "mousetrap": "^1.6.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-hook-form": "^6.5.0",
    "react-hook-form-devtools": "^1.2.0",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.0",
    "react-spring": "^8.0.27",
    "shortid": "^2.2.15",
    "ss-search": "^1.5.20",
    "styled-components": "^5.1.1",
    "swr": "^0.3.1",
    "yarn.lock": "^0.0.1-security"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.52",
    "@electron-forge/maker-deb": "6.0.0-beta.52",
    "@electron-forge/maker-dmg": "6.0.0-beta.52",
    "@electron-forge/maker-rpm": "6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "6.0.0-beta.52",
    "@electron-forge/maker-zip": "6.0.0-beta.52",
    "@storybook/addon-actions": "^6.0.16",
    "@storybook/addon-links": "^6.0.16",
    "@storybook/addons": "^6.0.16",
    "@storybook/preset-create-react-app": "^3.1.1",
    "@storybook/react": "^6.0.16",
    "electron": "^9.2.1",
    "husky": "^4.2.3",
    "jest-websocket-mock": "^2.0.2",
    "mock-socket": "^9.0.3",
    "prettier": "^2.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "electron/icon",
        "name": "TrueBlocks Explorer"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "electron/icon.png"
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "trueblocks_explorer"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
